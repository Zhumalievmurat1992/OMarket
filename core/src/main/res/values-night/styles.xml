<resources>

    <style name="Theme.OMarket" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black_1</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black_1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.OMarket.Core.Cells">
        <item name="android:background">@color/white_1</item>
    </style>

    <style name="TextView.Telegram_Hint" parent="TextView.O_Money_Agreement">
        <item name="android:textColor">@color/gray_3</item>
    </style>

    <style name="EditableTextView">
