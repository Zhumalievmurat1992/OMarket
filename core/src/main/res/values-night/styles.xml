    <style name="TextView.Cells.SubTitle" parent="TextView.Cells.Title">
        <item name="android:textColor">@color/gray_3</item>
        <item name="android:textSize">@dimen/cells_title_text_size_16sp</item>
    </style>

    <style name="TextView.Cells.SubTitle.Faq" parent="TextView.Cells.SubTitle">
        <item name="android:layout_marginStart">@dimen/margin_start_16dp</item>
        <item name="android:textSize">@dimen/cells_subTitle_text_size_15sp</item>
        <item name="android:textColor">@color/gray_1</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="TextView.Price.Verifying.Texts" parent="TextView.Cells.SubTitle.Faq">
        <item name="android:textColor">@color/gray_4</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
    </style>

    <style name="TextView.Cells.Details" parent="TextView.Cells.Title">
        <item name="android:textColor">@color/gray_3</item>
        <item name="android:layout_marginStart">@dimen/margin_start_0dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_end_16dp</item>
    </style>

    <style name="TextView.Divider.Cells.Title" parent="TextView.Cells.Title">
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="TextView.Divider.Cells.Button" parent="TextView.Cells.Title">
        <item name="android:textColor">@color/blue_1</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Container">
        <item name="android:background">@color/white_1</item>
    </style>

    <style name="Container.Main">
        <item name="android:background">@color/black_2</item>
    </style>

    <style name="Container.Cells">
        <item name="android:background">@color/black_1</item>
    </style>

    <style name="Container.EditCells">
        <item name="android:background">@color/black_3</item>
    </style>

    <style name="Container.OneCell">
        <item name="android:background">@color/black_3</item>
    </style>

    <style name="Divider">
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ProgressBar">
        <item name="android:indeterminate">true</item>
    </style>

    <style name="ProgressBar.ImageLoad">
        <item name="android:layout_width">28dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateTint">@color/white_1</item>
    </style>

    <style name="OTPInputText">
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:textColor">@color/white_1</item>
        <item name="android:textSize">@dimen/text_17sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
    </style>

    <style name="OTPErrorMessage">
        <item name="android:textSize">@dimen/text_14sp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/red_1</item>
    </style>

    <style name="OTPResentButton" parent="OTPErrorMessage">
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
        <item name="android:textColor">@color/blue_1</item>
    </style>

    <style name="Widget.Theme.OMarket.MyView" parent="">
        <item name="android:background">@color/gray_600</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/black_4</item>
    </style>

    <style name="appBar">
        <item name="android:textSize">@dimen/text_15sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_semibold</item>
        <item name="android:textColor">@color/black_4</item>
    </style>

    <style name="GreenButton" parent="MaterialButton">
        <item name="android:textColor">@color/white_1</item>
        <item name="backgroundTint">@color/color_green_button</item>
        <item name="strokeColor">@color/color_green_button</item>
        <item name="rippleColor">@color/green_4</item>
    </style>

    <style name="GrayButton" parent="MaterialButton">
        <item name="android:textColor">@color/white_1</item>
        <item name="backgroundTint">@color/black_5</item>
        <item name="strokeColor">@color/black_5</item>
    </style>


    <style name="hint">
        <item name="android:textSize">@dimen/text_13sp</item>
        <item name="android:fontFamily">@font/sf_pro_text_regular</item>
